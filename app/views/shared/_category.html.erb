<li class="border">
  <%= link_to category_financial_transactions_path(category), id: category.id, class: 'category-item' do %>
    <img src="<%= category.icon %>" alt="category_icon">
    <div class="d-flex flex-column w-100 gap-2">
      <h4><%= category.name %></h4>
      <span class="total">Total:&nbsp;&nbsp;$<%= category.total_transactions %></span>
    </div>
  <% end %>
</li>
